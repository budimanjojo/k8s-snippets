      "metadata:",
      "  name: ${1:name}$0"
    ]
  },

  "Kubernetes PersistentVolume": {
    "prefix": ["kpersistentvolume", "k-persistentvolume", "kpv", "k-pv"],
    "description": "Kubernetes PersistentVolumeClaim",
