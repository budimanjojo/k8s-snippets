      "apiVersion: v1",
      "kind: StorageClass",
      "metadata:",
      "  name: ${1:name}",
      "  labels:",
      "    app.kubernetes.io/name: ${1:name}",
      "provisioner: ${2:rook-ceph}",
      "allowVolumeExpansion: ${3|true,false|}",
      "reclaimPolicy: ${4|Delete,Retain,Recycle|}$0"
    ]
  },

