      "metadata:",
      "  name: ${1:name}",
      "spec:",
      "  selector:",
      "    matchLabels:",
      "      app.kubernetes.io/name: ${1:name}",
      "  serviceName: ${1:name}",
      "  replicas: ${2:1}",
      "  template:",
      "    metadata:",
      "      labels:",
      "        app.kubernetes.io/name: ${1:name}",
      "    spec:",
      "      terminationGracePeriodSeconds: 10",
      "      containers:",
      "        - name: ${1:name}",
      "          image: ${2:image}:${3:latest}",
      "          ports:",
      "            - name: ${4:http}",
      "              containerPort: ${5:80}",
      "          volumeMounts:",
      "            - name: ${6:www}",
      "              mountPath: ${7:/usr/share/nginx/html}",
      "  volumeClaimTemplates:",
      "    - metadata:",
      "        name: ${6:www}",
      "      spec:",
      "        storageClassName: ${7|rook-ceph-block,nfs-provisioner,default|}",
      "        accessModes:",
      "          - ${8|ReadWriteOnce,ReadWriteMany,ReadOnlyMany|}",
      "        resources:",
      "          requests:",
      "            storage: ${9:1Gi}$0"
    ]
  },

