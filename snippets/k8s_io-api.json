  "Kubernetes StatefulSet": {
    "prefix": ["kstatefulset", "k-statefulset", "ksts", "k-sts"],
    "description": "Kubernetes StatefulSet",
    "body": [
      "---",
      "# yaml-language-server: \\$schema=https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/v1.26.1-standalone-strict/statefulset-apps-v1.json",
